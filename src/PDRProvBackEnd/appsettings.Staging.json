    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=.\\SQL2017;Initial Catalog=PDRrov; User ID=sa;Password=admin",
          "sinkOptionsSection": {
            "tableName": "Logs",
            "autoCreateSqlTable": true
          },
          "restrictedToMinimumLevel": "Debug",
          "batchPostingLimit": 1,
          "columnOptionsSection": {
            "addStandardColumns": [ "LogEvent" ],
            "timeStamp": {
              "columnName": "Timestamp",
              "convertToUtc": true
            }
          }
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\log.txt",
          "rollingInterval": "Day",
          "buffered": false,
          "retainedFileCountLimit": null,
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "AuditTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=.\\SQL2019;Initial Catalog=PDRrov; User ID=sa;Password=admin",
          "restrictedToMinimumLevel": "Information",
          "sinkOptionsSection": {
            "tableName": "LogsAudit",
            "autoCreateSqlTable": true
          },
          "columnOptionsSection": {
            "addStandardColumns": [ "LogEvent" ],
            "timeStamp": {
              "columnName": "Timestamp",
              "convertToUtc": true
            }
          }
        }
      }
    ]
  }
